<div class="container mt-5">
    
    <h1 class="my-4 d-flex justify-content-center">
        Register As Job Seeker
    </h1>

    <form action="" method="post">
        <div class="form-group">
            <input type="first_name" name="first_name" id="first_name" class="form-control" placeholder="First name">
        </div>

        <div class="form-group">
            <input type="last_name" name="last_name" id="last_name" class="form-control" placeholder="Last Name">
        </div>

        <div class="form-group">
            <input type="email" name="email" id="email" class="form-control" placeholder="Email">
        </div>

        <div class="form-group">
            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
        </div>

        <div class="form-group">
            <input type="password" name="conf_password" id="conf_password" class="form-control"
                placeholder="Confirm Password">
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary btn-block">
        </div>
    </form>

    <p>
        already have an account? <a href="/login">login</a>
    </p>
    <p>
        I looking for employee <a href="/company/register">register as emplyee seeker</a>
    </p>
</div>